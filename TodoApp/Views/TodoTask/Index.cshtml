@model IEnumerable<TodoTask>
@{
    ViewData["Title"] = "Index";
}


<br />
<br />
<u><center><h1>Index Todo Task</h1></center></u>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <u><h2 class="text-primary">Task List</h2></u>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TodoTask" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;
                Create New Task
            </a>
        </div>
    </div>



    <div class="border p-2 mt-4">
        <table class="table table-striped-columns" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Task Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Creation Date
                    </th>
                    <th>
                        Due Date
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">
                            @obj.TaskName
                        </td>
                        <td width="25%">
                            @obj.Description
                        </td>
                        <td width="25%">
                            @obj.CreatedDateTime
                        </td>
                        <td width="25%">
                            @obj.DueDate
                        </td>
                        
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="TodoTask" asp-action="Edit" asp-route-id="@obj.TaskId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="TodoTask" asp-action="Delete" asp-route-id="@obj.TaskId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i>Delete
                                </a>
                                @if (!obj.IsCompleted)
                                {
                                    <a asp-controller="TodoTask" asp-action="MarkAsDone" asp-route-id="@obj.TaskId" class="btn btn-success mx-2">
                                        <i class="bi bi-check-circle"></i>Done
                                    </a>
                                }
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
