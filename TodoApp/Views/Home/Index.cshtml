@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center" style="background-image: url('/images/hero-bg.jpg'); padding: 80px; background-size: cover; color: black;">
    <h1>Organize Your Life with Ease</h1>
    <p>Track and complete your tasks with our simple and effective task manager.</p>
    <a asp-controller="TodoTask" asp-action="Create" class="btn btn-primary btn-lg">Start Your First Task</a>
</div>

<div class="container mt-5">
    <!-- Features Section -->
    <div class="row text-center">
        <div class="col-md-4">
            <i class="bi bi-list-check" style="font-size: 3rem;"></i>
            <h3>Task Management</h3>
            <p>Create, update, and track all your tasks in one place.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-clock-history" style="font-size: 3rem;"></i>
            <h3>Completion History</h3>
            <p>Access completed tasks and track your productivity over time.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-alarm" style="font-size: 3rem;"></i>
            <h3>Set Deadlines</h3>
            <p>Stay on top of your tasks with due date reminders.</p>
        </div>
    </div>

    <!-- Visual Statistics Section -->
    <div class="mt-5 text-center">
        <h2>Track Your Progress</h2>
        <p>100+ tasks completed this week!</p>
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75% Tasks Completed</div>
        </div>
    </div>

    <!-- Testimonial Section -->
    <div class="mt-5 text-center">
        <h2>What Our Users Say</h2>
        <blockquote class="blockquote">
            <p>"This task manager has helped me stay organized and productive."</p>
            <footer class="blockquote-footer">Vikas Kumar Pandit S</footer>
        </blockquote>
        <blockquote class="blockquote">
            <p>"I love the simplicity and ease of use!"</p>
            <footer class="blockquote-footer">Shubham Gupta</footer>
        </blockquote>
    </div>
</div>

